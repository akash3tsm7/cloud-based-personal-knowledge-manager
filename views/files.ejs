<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Files - Knowledge Manager</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        h1 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .header {
            background: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header a {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
        }

        .file-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .file-card:hover {
            transform: translateY(-2px);
        }

        .file-icon {
            font-size: 3em;
        }

        .file-info {
            flex: 1;
        }

        .file-info h3 {
            color: #667eea;
            margin-bottom: 10px;
        }

        .file-info p {
            color: #666;
            margin: 5px 0;
            font-size: 14px;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .delete-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
        }

        .delete-btn:hover {
            background: #c0392b;
        }

        .view-btn {
            background: #3498db;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
        }

        .view-btn:hover {
            background: #2980b9;
        }

        .empty {
            background: white;
            padding: 60px;
            border-radius: 10px;
            text-align: center;
            color: #999;
        }
    </style>
    <style>
        /* Chat UI Styles */
        .chat-section {
            background: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .chat-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .chat-messages {
            max-height: 200px;
            overflow-y: auto;
            background: #f8f9fa;
            border-radius: 5px;
            padding: 10px;
            border: 1px solid #eee;
            margin-bottom: 10px;
            display: none;
            /* Hidden by default until there are messages */
        }

        .chat-messages.active {
            display: block;
        }

        .message {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            max-width: 80%;
        }

        .message.user {
            background: #e3f2fd;
            margin-left: auto;
            color: #0d47a1;
        }

        .message.ai {
            background: #f1f8e9;
            margin-right: auto;
            color: #33691e;
        }

        .chat-input-area {
            display: flex;
            gap: 10px;
        }

        .chat-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        .chat-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
        }

        .chat-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .ask-ai-btn {
            background: #8e44ad;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
        }

        .ask-ai-btn:hover {
            background: #9b59b6;
        }

        /* Source Visualization */
        .sources-section {
            margin-top: 12px;
            padding-top: 10px;
            border-top: 1px solid #e1e8ed;
            font-size: 0.85rem;
        }

        .sources-title {
            font-weight: 700;
            color: #555;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .source-item {
            background: rgba(255, 255, 255, 0.6);
            border: 1px solid #ddd;
            border-radius: 6px;
            padding: 8px;
            margin-bottom: 8px;
        }

        .source-header {
            display: flex;
            justify-content: space-between;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 4px;
        }

        .source-score {
            color: #27ae60;
            font-size: 0.8em;
        }

        .source-snippet {
            color: #666;
            font-style: italic;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>üìö My Files</h1>
        <div class="header">
            <div>Total Files: <%= files.length %>
            </div>
            <a href="/api/upload">‚ûï Upload New File</a>
        </div>

        <!-- Global Chat Section -->
        <div class="chat-section">
            <h2>üí¨ Ask Global AI</h2>
            <p style="color: #666; margin-bottom: 15px; font-size: 0.9em;">Ask questions across all your uploaded
                documents.</p>
            <div class="chat-container">
                <div id="globalChatMessages" class="chat-messages"></div>
                <div class="chat-input-area">
                    <input type="text" id="globalChatInput" class="chat-input" placeholder="Type your question here...">
                    <button onclick="askGlobalAI()" id="globalChatBtn" class="chat-btn">Ask AI</button>
                </div>
            </div>
        </div>

        <% if (files.length> 0) { %>
            <% files.forEach(file=> { %>
                <div class="file-card">
                    <div class="file-icon">üìÑ</div>
                    <div class="file-info">
                        <h3>
                            <%= file.fileName %>
                        </h3>
                        <p><strong>Type:</strong>
                            <%= file.fileType %>
                        </p>
                        <p><strong>Uploaded:</strong>
                            <%= new Date(file.createdAt).toLocaleString() %>
                        </p>
                        <p><strong>ID:</strong>
                            <%= file._id %>
                        </p>
                    </div>
                    <div class="actions">
                        <button onclick="openFileChat('<%= file._id %>', '<%= file.fileName %>')" class="ask-ai-btn">ü§ñ
                            Ask AI</button>
                        <a href="/api/files/view/<%= file._id %>" class="view-btn">üëÅÔ∏è View Content</a>
                        <button onclick="deleteFile('<%= file._id %>')" class="delete-btn">üóëÔ∏è Delete</button>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="empty">No files uploaded yet. Click "Upload New File" to get started!</div>
                        <% } %>
    </div>

    <!-- File Chat Modal -->
    <div id="fileChatModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeFileChat()">&times;</span>
            <h2 id="modalFileTitle">Chat about File</h2>
            <div class="chat-container" style="margin-top: 15px;">
                <div id="fileChatMessages" class="chat-messages" style="max-height: 300px;"></div>
                <div class="chat-input-area">
                    <input type="text" id="fileChatInput" class="chat-input" placeholder="Ask about this file...">
                    <button onclick="askFileAI()" id="fileChatBtn" class="chat-btn">Ask</button>
                </div>
            </div>
            <input type="hidden" id="currentFileId" value="">
        </div>
    </div>

    <script>
        async function deleteFile(id) {
            if (!confirm('Are you sure you want to delete this file?')) return;

            try {
                const response = await fetch('/api/files/' + id, {
                    method: 'DELETE',
                    headers: { 'Accept': 'application/json' }
                });

                if (response.ok) {
                    alert('File deleted successfully!');
                    location.reload();
                } else {
                    alert('Failed to delete file');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        /* AI Chat Logic */
        let currentFileIdForChat = null;

        // Global Chat
        async function askGlobalAI() {
            const input = document.getElementById('globalChatInput');
            const messagesDiv = document.getElementById('globalChatMessages');
            const btn = document.getElementById('globalChatBtn');
            const question = input.value.trim();

            if (!question) return;

            // UI Updates
            messagesDiv.classList.add('active');
            appendMessage(messagesDiv, question, 'user');
            input.value = '';
            input.disabled = true;
            btn.disabled = true;
            btn.textContent = 'Thinking...';

            try {
                const response = await fetch('/api/rag/ask', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ question })
                });

                const data = await response.json();

                if (data.success) {
                    appendMessage(messagesDiv, data.data.answer, 'ai', data.data.sources);
                } else {
                    appendMessage(messagesDiv, 'Error: ' + data.message, 'ai');
                }
            } catch (error) {
                appendMessage(messagesDiv, 'Error: ' + error.message, 'ai');
            } finally {
                input.disabled = false;
                btn.disabled = false;
                btn.textContent = 'Ask AI';
                input.focus();
            }
        }

        // File Chat Modal
        function openFileChat(fileId, fileName) {
            currentFileIdForChat = fileId;
            document.getElementById('currentFileId').value = fileId;
            document.getElementById('modalFileTitle').textContent = 'Chatting about: ' + fileName;
            document.getElementById('fileChatMessages').innerHTML = ''; // Clear previous chat
            document.getElementById('fileChatMessages').classList.remove('active');
            document.getElementById('fileChatModal').style.display = 'block';
            document.getElementById('fileChatInput').focus();
        }

        function closeFileChat() {
            document.getElementById('fileChatModal').style.display = 'none';
            currentFileIdForChat = null;
        }

        // Close modal when clicking outside
        window.onclick = function (event) {
            const modal = document.getElementById('fileChatModal');
            if (event.target == modal) {
                closeFileChat();
            }
        }

        async function askFileAI() {
            const fileId = document.getElementById('currentFileId').value;
            const input = document.getElementById('fileChatInput');
            const messagesDiv = document.getElementById('fileChatMessages');
            const btn = document.getElementById('fileChatBtn');
            const question = input.value.trim();

            if (!question || !fileId) return;

            // UI Updates
            messagesDiv.classList.add('active');
            appendMessage(messagesDiv, question, 'user');
            input.value = '';
            input.disabled = true;
            btn.disabled = true;
            btn.textContent = '...';

            try {
                const response = await fetch(`/api/rag/ask-file/${fileId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ question })
                });

                const data = await response.json();

                if (data.success) {
                    appendMessage(messagesDiv, data.data.answer, 'ai', data.data.sources);
                } else {
                    appendMessage(messagesDiv, 'Error: ' + data.message, 'ai');
                }
            } catch (error) {
                appendMessage(messagesDiv, 'Error: ' + error.message, 'ai');
            } finally {
                input.disabled = false;
                btn.disabled = false;
                btn.textContent = 'Ask';
                input.focus();
            }
        }

        function appendMessage(container, text, type, sources = []) {
            const msgDiv = document.createElement('div');
            msgDiv.className = `message ${type}`;

            // Message Content
            let contentHtml = text.replace(/\n/g, '<br>');

            // Sources Section
            if (sources && sources.length > 0) {
                contentHtml += `
                    <div class="sources-section">
                        <div class="sources-title">üìö Sources Used</div>
                        ${sources.map(s => `
                            <div class="source-item">
                                <div class="source-header">
                                    <span>üìÑ ${s.fileName || 'Unknown File'}</span>
                                    <span class="source-score">${Math.round(s.score * 100)}% Match</span>
                                </div>
                                <div class="source-snippet">"${s.text}"</div>
                            </div>
                        `).join('')}
                    </div>
                `;
            }

            msgDiv.innerHTML = contentHtml;
            container.appendChild(msgDiv);
            container.scrollTop = container.scrollHeight;
        }

        // Allow Enter key to submit
        document.getElementById('globalChatInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                askGlobalAI();
            }
        });

        document.getElementById('fileChatInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                askFileAI();
            }
        });
    </script>
</body>

</html>